{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "baseUrl": "./",
    "types": ["node", "jest"],
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./build",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "exclude": ["node_modules", "src/starters", "jest.config.ts"]
}
